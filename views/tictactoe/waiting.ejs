        color: #FFF;
        position: relative;
    }
    .loader::before {
        content: '';
        position: absolute;
        left: 204px;
        bottom: 15px;
        width: 27px;
        height: 27px;
        border-radius: 50%;
        border: 5px solid #FFF;
        border-bottom-color: var(--bs-primary);
        box-sizing: border-box;
        animation: rotation 0.6s linear infinite;
    }

    @keyframes rotation {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>

